    <script>
        var menuOpen=document.getElementById("menu");
        menuOpen.onclick=function(){
            document.getElementById("side-menu").style.left="0%";
        }
        var menuClose=document.getElementById("menu-close");
        menuClose.onclick=function(){
            document.getElementById("side-menu").style.left="-40%";
        }
    </script>
    <div>
        <div class="container" >
            <h3 id="container-header">Enter your name:</h3>
            <form action="/create" method="GET" name="nameform" onsubmit="return vaildMe()">
                <input type="text" name="fname" id="fname" class="form-items">
                <p id="err"> </p>
                <input type="text" name="dare" id="dare" style="display:none" value="dare1">
                <input type="submit" id="submit" value="Submit">
            </form>
        </div>
    </div>
    <script>
        vaildMe=function(){
            var name=document.forms["nameform"]["fname"].value;
            var error=document.getElementById('err');
            var flag=0;
            var oriname='';
            var i=0;
            for(i=0;i<name.length;i++){
                if(name[i]=='/'||name=='<'||name=='>'||name=='?'||name==';'){
                    continue;
                }
                if(name[i]=='%'){
                    i=i+2;
                    continue;
                }else{
                    oriname=oriname+name[i];
                }
            }
            if(name.length>=4){
                return true;
            }else{
                error.innerHTML="Should have atleast 4 characters";
                return false;
            }
            name=oriname;
        };
    </script>
</div>
